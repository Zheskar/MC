@helper UseLanguage(object obj, string propertyName)
{    

if ((string)HttpContext.Current.Session["language"] != "Eng" &&  !string.IsNullOrEmpty((string)HttpContext.Current.Session["language"]))
{
    propertyName = propertyName + "_" + (string)HttpContext.Current.Session["language"];
}

@obj.GetType().GetProperty(propertyName).GetValue(obj, null)

